---
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Generator from '../components/Generator'
import BackTop from '../components/BackTop.astro'
import '../message.css'
import 'katex/dist/katex.min.css'
import 'highlight.js/styles/atom-one-dark.css'
---

<Layout title="Nostradamoussa">
  <main >
    <Header />
    <Generator client:load />
    <Footer />
    <BackTop/>
  </main>
</Layout>

<script>
  // Check if the user is authenticated, and if not, redirect to the password page.
  const authenticated = localStorage.getItem('pass');
  if (!authenticated) {
    window.location.href = '/password.astro';
  }
</script>
